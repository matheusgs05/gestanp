<% @uploads = Upload.all %>
<h1>Uploads</h1>

<table>
  <thead>
    <tr>
      <th>Arquivo</th>
      <th>Usuário</th>
      <th>File name</th>
      <th>Content type</th>
      <th>Criação</th>
      <th>Size</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.arquivo %></td>
        <% @usuario = User.find_by(id: upload.id_uploader) %>
        <td><%= @usuario.name %></td>
        <td><%= upload.file_name %></td>
        <td><%= upload.content_type %></td>
        <td><%= upload.created_at.to_formatted_s(:db)   %></td>
        <td><%= upload.size %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload', new_upload_path %>
